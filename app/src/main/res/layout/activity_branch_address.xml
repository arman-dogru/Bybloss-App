<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BranchAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/region_field"
            android:layout_width="match_parent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="State/Region"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/city_field"
            android:layout_width="match_parent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/street_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Street Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/building_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Building Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/postal_code_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Postal Code"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/save_address_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Address" />
    </LinearLayout>
</RelativeLayout>